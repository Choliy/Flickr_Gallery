<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/toolbar_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/toolbar_icon_menu"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_margin"
            android:contentDescription="@null"
            android:onClick="onToolbarClick"
            android:scaleType="centerInside"
            android:src="@drawable/ic_toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColoBlack"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/toolbar_icon_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:onClick="onToolbarClick"
            android:paddingEnd="@dimen/material_margin"
            android:paddingStart="@dimen/material_margin"
            android:src="@drawable/ic_search_black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/toolbar_icon_back"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:onClick="onToolbarClick"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"/>

        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:closeIcon="@null"
            app:defaultQueryHint="@string/hint_search"
            app:queryBackground="@android:color/white"
            app:searchHintIcon="@drawable/ic_search_gray"/>

    </LinearLayout>

</android.support.v7.widget.Toolbar>