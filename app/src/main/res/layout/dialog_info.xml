<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/medium_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:orientation="horizontal">

        <TextView
            fontPath="@string/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_about_title"
            android:textColor="@color/textColoBlack"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_margin"
            android:text="@string/dialog_app_version"
            android:textColor="@color/textColorLightGray"
            android:textSize="@dimen/text_medium"/>

    </LinearLayout>

    <TextView
        style="@style/MessageTextStyle"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/dialog_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:text="@string/dialog_issue"
        android:textColor="@color/textColorLightGray"
        android:textSize="@dimen/text_small"/>

    <TextView
        android:id="@+id/developer_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@drawable/selector_dialog"
        android:textSize="@dimen/text_small"
        tools:text="@string/text_developer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_email"
            style="@style/DialogButtonStyle"
            android:text="@string/dialog_email_btn"/>

        <TextView
            android:id="@+id/btn_dialog_feedback"
            style="@style/DialogButtonStyle"
            android:layout_marginStart="@dimen/material_margin"
            android:text="@string/dialog_feedback_btn"/>

        <View style="@style/ViewWeightStyle"/>

        <TextView
            android:id="@+id/btn_about_close"
            style="@style/DialogButtonStyle"
            android:text="@string/dialog_close_btn"/>

    </LinearLayout>

</LinearLayout>