<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/toolbar_icon_menu"
        android:layout_width="@dimen/dimen_toolbar_icon_size"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_material_margin"
        android:contentDescription="@null"
        android:onClick="onToolbarClick"
        android:scaleType="centerInside"
        android:src="@drawable/ic_toolbar"/>

    <TextView
        style="@style/ToolbarTextStyle"
        android:text="@string/app_name"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/toolbar_icon_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:onClick="onToolbarClick"
        android:paddingEnd="@dimen/dimen_material_margin"
        android:paddingStart="@dimen/dimen_material_margin"
        android:src="@drawable/ic_search_gray"/>

</LinearLayout>