<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/no_connection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="invisible"
    tool:visibility="visible">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_item_size"
        android:layout_height="@dimen/image_item_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/material_margin"
        android:contentDescription="@null"
        android:src="@drawable/ic_no_connection"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_oops"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/textColorGray"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_no_connection"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/textColorGray"/>

</LinearLayout>