<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_picture"
    style="@style/ToolbarLayoutStyle">

    <ImageView
        android:id="@+id/ic_return_picture"
        style="@style/ToolbarImageStyle"
        android:contentDescription="@null"/>

    <TextView
        style="@style/ToolbarTextStyle"
        android:text="@string/nav_picture"/>

    <TextView
        android:id="@+id/text_picture_title"
        style="@style/ToolbarTextStyle"
        fontPath="@string/font_bold"
        android:layout_marginEnd="@dimen/material_margin"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="Lord of the Rings"/>

</android.support.v7.widget.Toolbar>