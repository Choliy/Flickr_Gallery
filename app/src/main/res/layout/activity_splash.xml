<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dark_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_splash"
        style="@style/ToolbarLayoutStyle"
        android:visibility="invisible"
        tools:visibility="visible">

        <include layout="@layout/toolbar_main"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/image_splash_white"
        style="@style/SplashImageStyle"
        android:contentDescription="@null"
        android:src="@drawable/ic_flickr_white"/>

    <ImageView
        android:id="@+id/image_splash_shadow"
        style="@style/SplashImageStyle"
        android:contentDescription="@null"
        android:src="@drawable/ic_flickr_shadow"
        android:visibility="invisible"
        tools:visibility="visible"/>

</FrameLayout>