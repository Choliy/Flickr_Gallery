<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_saved"
    style="@style/ToolbarLayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_return_saved"
            style="@style/ToolbarImageStyle"
            android:contentDescription="@null"/>

        <TextView
            style="@style/ToolbarTextStyle"
            android:text="@string/nav_saved_pictures"/>

        <ImageView
            android:id="@+id/ic_delete_pictures"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:paddingEnd="@dimen/dimen_material_margin"
            android:paddingStart="@dimen/dimen_material_margin"
            android:src="@drawable/ic_delete"/>

    </FrameLayout>

</android.support.v7.widget.Toolbar>