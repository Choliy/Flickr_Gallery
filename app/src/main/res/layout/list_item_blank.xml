<?xml version="1.0" encoding="utf-8"?>
<com.choliy.igor.flickrgallery.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="@dimen/view_length"
        android:layout_height="@dimen/view_thickness"
        android:layout_gravity="end"
        android:background="@color/colorPrimary"/>

    <View
        android:layout_width="@dimen/view_thickness"
        android:layout_height="@dimen/view_length"
        android:layout_gravity="end"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/gallery_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"/>

</com.choliy.igor.flickrgallery.SquareLayout>