<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <FrameLayout
        android:id="@+id/picture_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/picture_ic_back"
        android:layout_width="@dimen/dimen_toolbar_icon_size"
        android:layout_height="@dimen/dimen_toolbar_height"
        android:layout_marginStart="@dimen/dimen_material_margin"
        android:clickable="true"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"/>

    <View
        android:id="@+id/fence_picture_view"
        style="@style/FenceViewStyle"/>

    <include layout="@layout/view_fab_picture"/>

</FrameLayout>