<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimStyle</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="ActivityAnimStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_alpha_show</item>
        <item name="android:windowExitAnimation">@anim/anim_alpha_hide</item>
    </style>

    <style name="ActivityTransparentStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimStyle</item>
    </style>

    <style name="InfoLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="QuestionLayoutOuterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_medium_margin</item>
    </style>

    <style name="QuestionLayoutInnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_medium_margin</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ToolbarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
    </style>

    <style name="ToolbarImageStyle">
        <item name="android:layout_width">@dimen/dimen_toolbar_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_material_margin</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/ic_back</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="LayoutToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="InfoImageStyle">
        <item name="android:layout_width">@dimen/dimen_image_list_size</item>
        <item name="android:layout_height">@dimen/dimen_image_list_size</item>
        <item name="android:layout_marginBottom">@dimen/dimen_material_margin</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:layout_marginEnd">@dimen/dimen_material_margin</item>
        <item name="android:layout_marginStart">@dimen/dimen_material_margin</item>
    </style>

    <style name="OopsTextStyle" parent="InfoTextStyle">
        <item name="android:text">@string/text_oops</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/dimen_text_small</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dimen_list_card_margin</item>
        <item name="android:textColor">@drawable/selector_dialog</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">@dimen/dimen_button_max_width</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="ViewWeightStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ViewSelectorOldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_list_old</item>
    </style>

    <style name="ViewSelectorNewStyle" parent="ViewSelectorOldStyle">
        <item name="android:background">@drawable/selector_list_new</item>
    </style>

    <style name="FenceViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="FabMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:paddingBottom">@dimen/dimen_material_margin</item>
        <item name="android:paddingEnd">@dimen/dimen_material_margin</item>
    </style>

    <style name="PicturePrimaryTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">@dimen/dimen_text_small</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="PictureSecondaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_text_small</item>
        <item name="android:layout_marginEnd">@dimen/dimen_small_margin</item>
        <item name="android:textColor">@color/colorTextLightGray</item>
    </style>

    <style name="PictureLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dimen_material_margin</item>
    </style>

    <style name="ListItemDateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_date</item>
        <item name="android:drawablePadding">@dimen/dimen_small_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextLightGray</item>
    </style>

    <style name="ListItemTimeStyle" parent="ListItemDateStyle">
        <item name="android:drawableEnd">@drawable/ic_time</item>
    </style>

    <style name="ListItemGridTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/colorTextGray</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ListItemSavedTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_small_margin</item>
        <item name="android:layout_marginStart">@dimen/dimen_small_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="SplashImageStyle">
        <item name="android:layout_width">@dimen/dimen_splash_image_size</item>
        <item name="android:layout_height">@dimen/dimen_splash_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>