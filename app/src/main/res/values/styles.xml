<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_show_alpha</item>
        <item name="android:windowExitAnimation">@anim/anim_hide_alpha</item>
    </style>

    <style name="InfoLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="QuestionLayoutStyleOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="QuestionLayoutStyleInner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ToolbarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarImageStyle">
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/material_margin</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/textColorGray</item>
    </style>

    <style name="InfoImageStyle">
        <item name="android:layout_width">@dimen/image_list_size</item>
        <item name="android:layout_height">@dimen/image_list_size</item>
        <item name="android:layout_marginBottom">@dimen/material_margin</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/textColorGray</item>
    </style>

    <style name="OopsTextStyle" parent="InfoTextStyle">
        <item name="android:text">@string/text_oops</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColoBlack</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/list_card_margin</item>
        <item name="android:textColor">@drawable/selector_dialog</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="ViewWeightStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ViewSelectorOldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_list_old</item>
    </style>

    <style name="ViewSelectorNewStyle" parent="ViewSelectorOldStyle">
        <item name="android:background">@drawable/selector_list_new</item>
    </style>

</resources>